{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{#
    the homepage is a special page which displays neither a header nor a footer.
    this is done with the 'trick' of defining empty Twig blocks without any content
#}
{% block header %}{{ parent() }}{% endblock %}
{% block footer %}{{ parent() }}{% endblock %}

{% block body %}

    <div class="page-header">
        <h1>{{ 'title.what'|trans({},'interfaces')|raw }}</h1>
        <h2>{{ 'title.whom'|trans({},'interfaces')|raw }}</h2>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_guest'|trans({},'interfaces')|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('homepage') }}">
                        <i class="fa fa-users" aria-hidden="true"></i> {{ 'action.browse_guest'|trans({},'interfaces') }}
                    </a>
                </p>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="jumbotron">
                <p>
                    {{ 'help.browse_user_sing_in'|trans({},'interfaces')|raw }}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('homepage') }}">
                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'action.browse_user_sing_in'|trans({},'interfaces') }}
                    </a>
                    <a class="btn btn-primary btn-lg" href="{{ path('homepage') }}">
                        <i class="fa fa-user-plus" aria-hidden="true"></i> {{ 'action.browse_user_sing_up'|trans({},'interfaces') }}
                    </a>
                    <br>
                    <a class="" href="{{ path('homepage') }}">
                        <i class="fa fa-frown" aria-hidden="true"></i> {{ 'action.browse_user_forgot_passw'|trans({},'interfaces') }}
                    </a>
                </p>
            </div>
        </div>
    </div>

    <div class="page-header">
        <h1>{{ 'title.advantages'|trans({},'interfaces')|raw }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <div class="jumbotron">
                <i class="fa fa-frown" aria-hidden="true"></i>
                <h1>{{ 'title.advantages'|trans({},'interfaces')|raw }}</h1>
                <p>


                </p>
            </div>
        </div>

    </div>
{% endblock %}